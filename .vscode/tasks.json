{
    "version": "2.1.0",
    "showOutput": "never",
    "tasks": [{
        "label": "C++ Builder",
        "type": "shell",
        "linux": {
            "command": "sh",
            "args": [
                ".vscode/Builder.sh",
                "${relativeFile}",
                "&>Output.txt"
            ],
        },
        "osx": {
            "command": "sh",
            "args": [
                ".vscode/Builder.sh",
                "${relativeFile}",
                "&>Output.txt"
            ],
        },
        "windows": {
            "command": ".vscode/builder.bat",
            "args": [
                "${relativeFile}"
            ],
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}